&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

/ {
    combos {
        compatible = "zmk,combos";

        BT_CLEAR_ALL {
            bindings = <&bt BT_CLR_ALL>;
            key-positions = <20 31>;
            layers = <3>;
